{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Profil Utilisateur</h1>

        <div class="bg-white shadow rounded-lg p-6">
            <table class="w-full border-collapse">
                <tbody>
                <tr class="border-b">
                    <th class="text-left text-gray-600 py-2">ID</th>
                    <td class="py-2 text-gray-900">{{ user.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left text-gray-600 py-2">Email</th>
                    <td class="py-2 text-gray-900">{{ user.email }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left text-gray-600 py-2">Mot de passe</th>
                    <td class="py-2 text-gray-900">
                        <span class="text-gray-400 italic">●●●●●●●●●</span> {# Masquer le mot de passe #}
                    </td>
                </tr>
                <tr>
                    <th class="text-left text-gray-600 py-2">Rôles</th>
                    <td class="py-2 text-gray-900">
                        <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded text-sm">
                            {{ user.roles ? user.roles|json_encode : 'Aucun rôle' }}
                        </span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="flex justify-between mt-6">
            <a href="{{ path('app_user_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                ⬅ Retour à la liste
            </a>

            <div class="flex gap-2">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    ✏ Modifier
                </a>

                {{ include('admin/user/_delete_form.html.twig', { 'class': 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' }) }}
            </div>
        </div>
    </div>
{% endblock %}
