{% extends 'base.html.twig' %}

{% block title %}Skill Index{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Skill Index</h1>

    <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
        <table class="min-w-full leading-normal">
            <thead>
                <tr class="bg-gray-200 text-gray-700 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Id</th>
                    <th class="py-3 px-6 text-left">Name</th>
                    <th class="py-3 px-6 text-left">Description</th>
                    <th class="py-3 px-6 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm">
                {% for skill in skills %}
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left">{{ skill.id }}</td>
                        <td class="py-3 px-6 text-left font-medium">{{ skill.name }}</td>
                        <td class="py-3 px-6 text-left">{{ skill.description }}</td>
                        <td class="py-3 px-6 text-center">
                            <a href="{{ path('app_skill_show', {'id': skill.id}) }}" 
                               class="text-blue-500 hover:underline">Show</a>
                            <span class="mx-2">|</span>
                            <a href="{{ path('app_skill_edit', {'id': skill.id}) }}" 
                               class="text-yellow-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="py-4 text-center text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        <a href="{{ path('app_skill_new') }}" 
           class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg shadow">
           Create New
        </a>
    </div>
</div>
{% endblock %}
