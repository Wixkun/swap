{% extends 'base.html.twig' %}

{% block title %}Modifier un Tag{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Modifier le Tag</h1>

        <div class="bg-white shadow rounded-lg p-6">
            {{ include('admin/tag/_form.html.twig', { 'button_label': 'Mettre à jour', 'class': 'space-y-4' }) }}
        </div>

        <div class="flex justify-between mt-6">
            <a href="{{ path('app_tag_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                ⬅ Retour à la liste
            </a>

            <div class="flex gap-2">
                {{ include('admin/tag/_delete_form.html.twig', { 'class': 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' }) }}
            </div>
        </div>
    </div>
{% endblock %}
