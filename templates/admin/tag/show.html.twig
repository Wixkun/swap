{% extends 'base.html.twig' %}

{% block title %}Détails du Tag{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Détails du Tag</h1>

        <div class="bg-white shadow rounded-lg p-6">
            <table class="w-full border-collapse">
                <tbody>
                <tr class="border-b">
                    <th class="text-left text-gray-600 py-2">ID</th>
                    <td class="py-2 text-gray-900 font-semibold">{{ tag.id }}</td>
                </tr>
                <tr>
                    <th class="text-left text-gray-600 py-2">Nom du Tag</th>
                    <td class="py-2 text-gray-900 font-semibold">
                        <span class="bg-green-100 text-green-700 px-2 py-1 rounded text-sm">
                            {{ tag.name }}
                        </span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="flex justify-between mt-6">
            <a href="{{ path('app_tag_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                ⬅ Retour à la liste
            </a>

            <div class="flex gap-2">
                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    ✏ Modifier
                </a>

                {{ include('admin/tag/_delete_form.html.twig', { 'class': 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' }) }}
            </div>
        </div>
    </div>
{% endblock %}
