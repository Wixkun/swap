{% extends 'base.html.twig' %}

{% block title %}Devenir Agent{% endblock %}

{% block body %}
    <section class="w-full max-w-lg mx-auto p-6">
        <h1 class="text-3xl font-bold text-black mb-4">Créer un compte agent</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-black border border-black text-black px-4 py-3 rounded relative mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            <label for="registrationForm_email" class="block text-gray-700 font-semibold">Email</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
        </div>

        <div>
            <label for="registrationForm_password_first" class="block text-gray-700 font-semibold">Mot de passe</label>
            {{ form_widget(registrationForm.password.first, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
        </div>

        <div>
            <label for="registrationForm_password_second" class="block text-gray-700 font-semibold">Retapez le mot de passe</label>
            {{ form_widget(registrationForm.password.second, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
        </div>

        <div>
            <label for="registrationForm_pseudo" class="block text-gray-700 font-semibold">Pseudo</label>
            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
        </div>

        <div>
            <label for="registrationForm_phoneNumber" class="block text-gray-700 font-semibold">Numéro de téléphone</label>
            {{ form_widget(registrationForm.phoneNumber, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
        </div>

        <div>
            <label class="block text-gray-700 font-semibold">Sélectionnez vos Skills</label>
            {{ form_widget(registrationForm.skills, {'attr': {'class': 'space-y-2'}}) }}
        </div>

        {{ form_end(registrationForm) }}

        <p class="text-gray-600 text-sm text-center mt-4">
            Déjà un compte ? <a href="{{ path('app_login') }}" class="text-black font-semibold hover:underline">Se connecter</a>
        </p>
        <p class="text-gray-600 text-sm text-center mt-4">
            S'inscrire en tant que client ? <a href="{{ path('app_register') }}" class="text-black font-semibold hover:underline">S'inscrire en tant que client</a>
        </p>
    </section>
{% endblock %}
