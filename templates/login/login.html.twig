{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Connexion</h1>

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" action="{{ path('app_login') }}" class="space-y-4">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div>
                <label for="email" class="block text-gray-700 font-semibold">Email</label>
                <input type="email" name="email" id="email" value="{{ email|default('') }}" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black">
            </div>

            <div>
                <label for="password" class="block text-gray-700 font-semibold">Mot de passe</label>
                <input type="password" name="password" id="password" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black">
            </div>

            <button type="submit"
                    class="w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800 transition">
                Se connecter
            </button>
        </form>

        <p class="text-gray-600 text-sm text-center mt-4">
            Pas encore de compte ?
            <a href="{{ path('app_register') }}" class="text-black font-semibold hover:underline">Cr√©er un compte</a>
        </p>
    </div>
</div>
{% endblock %}
