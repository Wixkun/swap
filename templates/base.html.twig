            <div x-data="{ open: false }" class="md:hidden">
                <button @click="open = !open" class="text-white focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                    </svg>
                </button>

                <div x-show="open" class="absolute left-0 top-16 w-full bg-black text-white p-4 shadow-md">
                    <nav class="flex flex-col gap-2">
                        <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Accueil</a>
                        <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Demande</a>
                        <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Offre</a>
                        <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Message</a>
                    </nav>
                </div>
            </div>

            <nav class="hidden md:flex gap-4">
                <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Accueil</a>
                <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Demande</a>
                <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Offre</a>
                <a href="{{ path('app_default') }}" class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Message</a>
            </nav>

            {% if app.user %}
                <div class="flex flex-row gap-2 transition duration-200 ease-in-out text-base font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full cursor-pointer my-10">
                    <div class="flex flex-row gap-1">
                        <p>{{ app.user.firstName }}</p>
                        <p>{{ app.user.lastName }}</p>
                    </div>

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                    </svg>
                </div>
            {% else %}
                <div class="my-10">
                    <a class="transition duration-200 ease-in-out text-lg font-ubuntu hover:bg-white hover:bg-opacity-20 p-2 rounded-full">Se connecter</a>
                    <a class="transition duration-200 ease-in-out text-base font-ubuntu bg-white text-black px-4 py-2 rounded-full hover:bg-opacity-70 cursor-pointer my-10">S'inscrire</a>
                </div>

            {% endif %}
        </header>

        <main class="container mx-auto mt-8 px-4">
            {% block body %}{% endblock %}
        </main>

        <footer class="bg-blue-600 text-white text-center py-4 mt-8">
            <p>&copy; 2025 Swap - Tous droits réservés</p>
        </footer>

        <script src="{{ asset('app.js') }}"></script>
    </body>
</html>
