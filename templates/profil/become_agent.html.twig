{% extends 'base.html.twig' %}

{% block title %}Devenir Agent{% endblock %}

{% block body %}
    <section class="w-full max-w-lg mx-auto p-6">
        <h1 class="text-3xl font-bold text-green-600 mb-4">Devenir un agent</h1>

        {{ form_start(form, { attr: { class: 'flex flex-col gap-4' } }) }}
        {% for field in form %}
            <div>
                {{ form_label(field) }}
                {{ form_widget(field, { attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}
        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition duration-300">
            Enregistrer
        </button>
        {{ form_end(form) }}
    </section>
{% endblock %}
