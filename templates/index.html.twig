{% extends 'base.html.twig' %}

{% block title %}Swap | Home{% endblock %}

{% block body %}
    <main class="flex flex-row w-full gap-4">
        <section class="w-1/3">
            <h2 class="text-4xl font-bold text-blue-600 font-ubuntu">Tags</h2>

            {% include 'parts/home/tagFilter.html.twig' with {'tags': tags} %}
        </section>

        <section class="w-full">
            <h1 class="text-4xl font-bold text-blue-600 font-ubuntu">Bienvenue sur Swap</h1>
            <p class="mt-4 text-lg text-gray-700">Déléguez vos tâches à des professionnels en toute simplicité.</p>
            {% include 'parts/home/taskShow.html.twig' with {'tasks': tasks} %}
        </section>

        <section class="w-1/3">
            {% include 'parts/home/taskForm.html.twig' with {'form': form} %}
        </section>
    </main>
{% endblock %}
