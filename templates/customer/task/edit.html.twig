{% extends 'base.html.twig' %}

{% block title %}Modifier la tâche{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Modifier la tâche</h1>

        <div class="bg-white p-6 rounded shadow">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            {{ form_row(form.title, {
                'attr': {
                    'class': 'w-full border border-gray-300 rounded p-2'
                }
            }) }}

            {{ form_row(form.description, {
                'attr': {
                    'class': 'w-full border border-gray-300 rounded p-2',
                    'rows': 5
                }
            }) }}

            {{ form_row(form.status, {
                'attr': {
                    'class': 'w-full border border-gray-300 rounded p-2'
                }
            }) }}

            {{ form_row(form.imageFiles, {
                'attr': {
                    'class': 'w-full'
                }
            }) }}

            {# Champ personnalisé pour la suppression des images existantes #}
            {% if form.removeImages is defined %}
                <fieldset class="mt-4 border border-gray-200 p-4 rounded">
                    <legend class="font-semibold text-gray-700 mb-2">Supprimer les images existantes</legend>
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
                        {% for child in form.removeImages %}
                            <label class="flex flex-col items-center cursor-pointer">
                                {{ form_widget(child) }}
                                <img src="{{ asset('uploads/tasks/' ~ child.vars.value) }}" alt="{{ child.vars.value }}" class="w-20 h-20 object-cover rounded mt-2">
                                <span class="text-sm text-gray-600 mt-1 break-all">{{ child.vars.value }}</span>
                            </label>
                        {% endfor %}
                    </div>
                </fieldset>
            {% endif %}

            {{ form_row(form.tags, {
                'attr': {
                    'class': 'w-full'
                }
            }) }}

            <div class="pt-4">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
