{% if tasks is empty %}
    <p>Aucune tâche pour le moment.</p>
{% else %}
    {% for task in tasks %}
        <article class="mb-6 p-4 border border-gray-200 rounded-md shadow-sm">
            <h3 class="text-xl font-bold mb-2">
                {{ task.title }}
                <span class="text-sm font-normal text-gray-500">({{ task.status }})</span>
            </h3>

            {% if task.description %}
                <p class="mb-2">{{ task.description }}</p>
            {% endif %}

            {% if task.imagePath %}
                <img
                        src="{{ asset('uploads/tasks/' ~ task.imagePath) }}"
                        alt="Image pour la tâche {{ task.title }}"
                        class="my-2 w-64 h-auto rounded shadow"
                />
            {% endif %}

            <p class="text-sm text-gray-400">
                Créée le {{ task.createdAt|date('d/m/Y') }}
            </p>
        </article>
    {% endfor %}
{% endif %}
