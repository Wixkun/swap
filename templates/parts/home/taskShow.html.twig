{% if tasks is empty %}
    <p>Aucune t√¢che pour le moment.</p>
{% else %}
    {% for task in tasks %}
        <article class="mb-6 p-4 border border-gray-200 rounded-md shadow-sm">
            <h3 class="text-xl font-bold mb-2">
                {{ task.title }}
            </h3>

            {% if task.description %}
                <p class="mb-2">{{ task.description }}</p>
            {% endif %}

            {# Boucle sur les images #}
            {% if task.imagePaths is not empty %}
                <div class="flex flex-wrap gap-4">
                    {% for filename in task.imagePaths %}
                        <img
                                src="{{ asset('uploads/tasks/' ~ filename) }}"
                                alt="{{ task.title }}"
                                class="w-32 h-auto rounded shadow"
                        />
                    {% endfor %}
                </div>
            {% endif %}
        </article>
    {% endfor %}
{% endif %}
