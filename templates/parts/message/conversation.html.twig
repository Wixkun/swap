<h2 class="text-2xl font-bold mb-4">Mes Conversations</h2>
{% if conversations is empty %}
    <p>Aucune conversation trouv√©e.</p>
{% else %}
    <ul>
        {% for conv in conversations %}
            <li class="mb-2 p-2 border rounded hover:bg-gray-100">
                <a href="{{ path('app_conversations_discussion', {'conv': conv.id}) }}" class="block">
                    {% if conv.idAgent and conv.idCustomer %}
                        {% if app.user.getIdAgent() is not null %}
                            Conversation avec {{ conv.idCustomer.firstName }} {{ conv.idCustomer.lastName }}
                        {% else %}
                            Conversation avec {{ conv.idAgent.pseudo }}
                        {% endif %}
                    {% else %}
                        Conversation {{ conv.id }}
                    {% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}